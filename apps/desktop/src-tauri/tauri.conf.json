{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Cowork",
  "version": "0.1.0",
  "identifier": "com.cowork.desktop",
  "build": {
    "beforeDevCommand": "bun run dev:tauri",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Cowork",
        "width": 1240,
        "height": 820
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "resources": [
      "../../../dist/**/*"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
