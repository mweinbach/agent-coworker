{
  "name": "agent-coworker",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "bin": {
    "cowork": "./src/index.ts"
  },
  "scripts": {
    "postinstall": "bun install --cwd apps/desktop && bun install --cwd apps/portal",
    "start": "bun src/index.ts",
    "cli": "bun src/index.ts --cli",
    "dev": "bun --watch src/index.ts",
    "serve": "bun src/server/index.ts",
    "tui": "bun --preload @opentui/solid/preload src/tui/index.tsx",
    "desktop:dev": "cd apps/desktop && bun run dev",
    "desktop:build": "cd apps/desktop && bun run build",
    "desktop:browser": "bun scripts/desktop_agent_browser.ts",
    "portal:dev": "cd apps/portal && bun run dev",
    "portal:build": "cd apps/portal && bun run build",
    "portal:start": "cd apps/portal && bun run start",
    "build:desktop-resources": "bun scripts/build_desktop_resources.ts",
    "docs:check": "bun scripts/check_docs.ts",
    "harness:run": "bun scripts/run_raw_agent_loops.ts --report-only",
    "test": "bun test",
    "test:stable": "bun scripts/run_tests_stable.ts"
  },
  "dependencies": {
    "@langfuse/otel": "^4.6.1",
    "@mariozechner/pi-ai": "^0.55.1",
    "@modelcontextprotocol/sdk": "^1.27.0",
    "@mozilla/readability": "^0.6.0",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/sdk-node": "^0.212.0",
    "@opentui/core": "^0.1.81",
    "@opentui/react": "^0.1.81",
    "@opentui/solid": "^0.1.81",
    "fast-glob": "^3.3.3",
    "fuzzysort": "^3.1.0",
    "jsdom": "^28.1.0",
    "react": "^19.2.4",
    "solid-js": "^1.9.11",
    "turndown": "^7.2.2",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/jsdom": "^27.0.0",
    "@types/node": "^25.3.0",
    "@types/react": "^19.2.14",
    "@types/turndown": "^5.0.6",
    "bun-types": "^1.3.9",
    "puppeteer-core": "^24.37.5",
    "typescript": "^5.9.3"
  }
}
